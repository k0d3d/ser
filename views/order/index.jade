.contentpanel
    .panel.panel-default
      .col-md-12
        .panel.panel-default()
            .panel-body
              .form-content(style="margin-bottom: 30px")
                form.form-inline(name="searchform", novalidate, ng-submit="searchcmp()")
                  .form-group
                    .col-md-5
                      input.input-large.form-control(type="search", ng-model="drugname", placeholder="Search your orders...")
                    .col-md-7

              table.table.table-hover.table-bordered(style="margin-top: 30px")
                thead
                  tr
                    th Drug Name
                    th Amount
                    th Date / Time
                    -if (userData.account_type === 5)
                      th Supplier
                    th Status
                    -if (userData.account_type !== 5)
                      th Hospital
                    th ETA
                    th 
                tbody
                  tr(ng-repeat="cmp in orders")
                    td {{cmp.itemId.itemName}}
                    td {{cmp.orderAmount}}
                    td {{cmp.orderDate | date:medium}}
                    -if (userData.account_type === 5)
                      td {{cmp.orderSupplier.name}}
                    td {{cmp.status | orderState}}
                    -if (userData.account_type !== 5)
                      td 
                        a(href="", ng-click="commons.href('hospital/'+cmp.hospitalId)") {{cmp.hospitalId.name}}
                    td
                      | {{cmp.eta | etaMoment}}
                      span.label.label-success.pull-right {{cmp.eta | moment}}
                    td
                      button.btn.btn-warning.btn-xs(ng-click=" open_order_manager(cmp); toggleModal('manage-order-modal');") Manage this      
                      button.btn.btn-info.btn-xs(ng-click="toggleModal('manage-order-updates'); $parent.__temp = cmp") Tracking      
              .x-pagination(pagination="orders", page-to="page(pageNo, limit, cb)")
include ../widgets/order/manage-order-modal
include ../widgets/order/manage-order-updates
+manageOrderModal(userData.account_type)
+orderStatusUpdates()