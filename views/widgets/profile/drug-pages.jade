mixin loadDrugPages()
  -if (isPermitted(['view-drug-pages']))
    #drug-pages.tab-pane
      .follower-list
        .panel-heading
          h4 Found {{userProfile.drugs.length || 0}} Drugs / Medical Items
        .panel-body
          -if (userData.account_type === 5)
            .media(ng-repeat="drug in userProfile.drugs")
              .row
                .col-sm-8.col-md-8
                  .media-body
                    h3.follower-name {{drug.itemId.itemName}}
                    .profile-location
                      | {{drug.drug.sciName}}
                    .profile-position
                      | {{drug.drug.category}}
                    .mb20
                .col-sm-3.col-md-3
                  .pull-right
                    .row
                      -if (userData.account_type < 5 )
                        button.btn.btn-sm.btn-danger
                          i.fa.fa-times
                      -if (userData.account_type === 5 )
                        input.form-control(type="number", placeholder="Amount")
                        button.btn.btn-sm.btn-info
                          | Order Now
                .clearfix
          -if (userData.account_type !== 5)
            .media(ng-repeat="drug in userProfile.drugs")
              .row
                .col-sm-9.col-md-9
                  a.pull-left(href='#')
                    img.media-object(src='holder.js/100x125.html', alt='')
                  .media-body
                    h3.follower-name {{drug.drug.itemName}}
                    .profile-location
                      | {{drug.drug.sciName}}
                    .profile-position
                      | {{drug.drug.category}}
                    .mb20
                .col-sm-2.col-md-2
                  .pull-right
                    .row
                      -if (userData.account_type < 5 )
                        button.btn.btn-sm.btn-danger
                          i.fa.fa-times
                .clearfix