mixin loadActivities
  -if (isPermitted(['view-activity']))
    #activities.tab-pane.active
      .activity-list(ng-repeat="act in activity")
        .media.act-media
          a.pull-left(href='#')
            img.media-object.act-thumb(src='images/photos/user1.png', alt='')
          .media-body.act-media-body
            .row
              .col-md-9
                strong {{act.alertDescription}}
                |  
                strong by <a ng-href="/a/organization/people/{{act.hospitalId}}/person/5">{{act.hospital.name}}</a>
                | .
                br
                small.text-muted.tooltips(title="{{act.created | date: 'medium'}}")  {{act.created | moment}}
              .col-md-3
                  a.btn.btn-xs.pull-right(href="", ng-click="hide_activity($index)")
                    | hide
                  -if (userData.account_type > 3)
                    button.btn.btn-orange.btn-xs.pull-right(ng-click="confirm_order(act)")
                      | confirm

      //
         activity-list 
      button.btn.btn-white.btn-block Show More