mixin showStaff()
  .col-sm-8.col-md-9
    .panel.panel-default
      .panel-heading
        ul.pagination.nomargin.pull-right
          li.disabled
            a(href='#')
              i.fa.fa-angle-left
          li
            a(href='#') 1
          li.active
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') 4
          li
            a(href='#') 5
          li
            a(href='#')
              i.fa.fa-angle-right
        h4.panel-title Found {{people.length}} people.
      //
         panel-heading 
      .panel-body(style="min-height: 500px")
        .results-list
          .col-md-6(ng-repeat="peeps in people")
              .people-item(data-drag="true", data-jqyoui-options="{revert: 'invalid'}", jqyoui-draggable="{index: {{$index}},placeholder:'keep',animate:false}", ng-model="people", ng-init="peeps.ndx = $index")
                  .media
                    i.fa.fa-arrows
                    a.pull-left(href='/organization/people/{{peeps._id}}/staff')
                      img.thumbnail.media-object(alt='', src='/images/default-avatar.png')
                    .media-body
                      h4.person-name 
                        a(href='/organization/people/{{peeps._id}}/staff') {{peeps.name | dashed}} 
                      .text-muted 
                        | {{peeps.userId.email}}
                      .text-muted
                        | {{peeps.userId.account_type | acctype}}
                      .btn-group
                          a.btn.btn-white.btn-xs(href='#', data-toggle='tooltip', data-placement='top', title='')
                            | Coverage
                            span.label.label-default(style="padding: 2px 4px; margin: 0 1px") {{peeps.coverage.length || 0}}
                          a.btn.btn-white.btn-xs(href='#', data-toggle='tooltip', data-placement='top', title='')
                            | Facilities

