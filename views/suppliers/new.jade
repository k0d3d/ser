append head
  link(rel='stylesheet', href='/css/table-fixed-header.css')

.row-fluid.row-break
  .col-md-5.offset1(ng-controller="supplierAddController")
    h3 New Supplier Entry Form
    form.newsupplier(name="newsupplier", novalidate)
      .form-group
          label.control-label Supplier Name
          .controls
              input.input-medium.form-control(type="text",name="patientname", ng-model="supplierForm.supplierName", required)
      .form-group
          label.control-label Address
          .controls
              textarea.input-medium.form-control(type="text",name="company", ng-model="supplierForm.address", required)
      .form-group
          label.control-label Phone Number
          .controls
              input.input-medium.form-control(type="tel",name="phoneNumber", ng-model="supplierForm.phoneNumber", required)
      .form-group
          label.control-label Other Contact
          .controls
              textarea.input-medium.form-control(type="text",name="otherContact", ng-model="supplierForm.otherContact")
      .form-group
          label.control-label Email Address
          .controls
              input.input-medium.form-control(type="email",name="email", ng-model="supplierForm.email")    
      .form-group
          label.control-label Contact Person
          .controls
              input.input-large.form-control(type="text",name="contactPerson", ng-model="supplierForm.contactPerson", required)       
      .form-group
          label.control-label Contact Person Phone
          .controls
              input.input-large.form-control(type="tel",name="contactPersonPhone", ng-model="supplierForm.contactPersonPhone", required)                                            
      button.btn.btn-primary(ng-click="addSupplier()",ng-init="saveButtonText='Save'", ng-disabled="newsupplier.$invalid") {{saveButtonText}}

append foot
  script(src="js/table-fixed-header.js")                
