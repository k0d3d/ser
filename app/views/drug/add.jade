contentpanel
    .panel.panel-default
        .panel-heading
          .panel-btns
            a.panel-close(href='#') ×
            a.minimize(href='#') −
          h4.panel-title Add new item

        .panel-body.panel-body-nopadding
          form.form-horizontal.form-bordered(ng-submit="add_drug(add_item_form)", novalidate, name="addItemForm")
            .form-group
              label.col-sm-3.control-label Brand Name
              .col-sm-6
                input.form-control.item-name(type='text', placeholder='', ng-model="add_item_form.itemName", required, type-ahead="autoCompleteItemName(result)", name="item-name", remote='/api/internal/items/typeahead?query=%QUERY')
            .form-group
              label.col-sm-3.control-label Composition
              .col-sm-6
                input.form-control(type='text', placeholder='', ng-model="add_item_form.sciName", required)
            .form-group
              label.col-sm-3.control-label NAFDAC Reg No.
              .col-sm-6
                input.form-control(type='text', placeholder='', ng-model="add_item_form.nafdacRegNo", required)
            .form-group
              label.col-sm-3.control-label Category
              .col-sm-6
                select.form-control(type='text', placeholder='', ng-model="add_item_form.category", ng-options="c for c in itemCategory", required)

            .form-group
              label.col-sm-3.control-label Price
              .col-sm-3
                input.form-control(type='number', placeholder='', ng-model="add_item_form.currentPrice", required)
            .form-group
              label.col-sm-3.control-label Item Form
              .col-sm-3
                select.form-control(type='number', placeholder='', ng-model="add_item_form.itemForm", required)
                  option(value='?', selected='selected')
                  option(value='0') Amples
                  option(value='1') Caplets
                  option(value='2') Capsules
                  option(value='3') Cream
                  option(value='4') Drops
                  option(value='5') Emugels
                  option(value='6') Gels
                  option(value='7') Lotion
                  option(value='8') Ointments
                  option(value='9') Powder
                  option(value='10') Sheet
                  option(value='11') Solutions
                  option(value='12') Sprays
                  option(value='13') Suppositories
                  option(value='14') Suspensions
                  option(value='15') Syrup
                  option(value='16') Tablets
                  option(value='17') Vials                  
            .form-group
              label.col-sm-3.control-label Item Packaging
              .col-sm-3
                select.form-control(type='number', placeholder='', ng-model="add_item_form.itemPackaging", required)
                  option(value='?', selected='selected')
                  option(value='0') Bags
                  option(value='1') Bottles
                  option(value='2') Box
                  option(value='3') Carton
                  option(value='4') Gallon
                  option(value='5') Packet
                  option(value='6') Pieces
                  option(value='7') Roll
                  option(value='8') Sachet
                  option(value='9') Tin
                  option(value='10') Tube

            .form-group
              label.col-sm-3 Upload Image
              .col-sm-6.dropzone(dropzone, ng-model="add_item_form.images")
                  input(name='itemImage', type='file', multiple='multiple', style="display: none")     
                  span.help-text 
                    | Add an image for this item. You can click here or drag and drop file right here, easy!                           
            .form-group
              .col-sm-6.col-sm-offset-3
                button.btn.btn-primary(type="submit", ng-disabled="addItemForm.$invalid") Submit
                button.btn.btn-primary(type="submit", ng-disabled="addItemForm.$invalid") Submit and Add Another
                button.btn.btn-default(type="reset") Cancel
  append scripts
  script(src="/js/dropzone.min.js")
  