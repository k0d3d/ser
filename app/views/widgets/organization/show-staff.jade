mixin showStaff()
  .col-sm-8.col-md-9
    .panel.panel-default
      .panel-heading
        ul.pagination.nomargin.pull-right
          li.disabled
            a(href='#')
              i.fa.fa-angle-left
          li
            a(href='#') 1
          li.active
            a(href='#') 2
          li
            a(href='#') 3
          li
            a(href='#') 4
          li
            a(href='#') 5
          li
            a(href='#')
              i.fa.fa-angle-right
        h4.panel-title Found {{people.length}} people.
      //
         panel-heading 
      .panel-body
        .results-list
          .col-md-6(ng-repeat="peeps in people")
              .people-item
                  .media
                    a.pull-left(href='/organization/people/{{peeps._id}}/staff')
                      img.thumbnail.media-object(alt='', src='/images/default-avatar.png')
                    .media-body
                      h4.person-name 
                        a(href='/organization/people/{{peeps._id}}/staff') {{peeps.name | dashed}} 
                      .text-muted(ng-show="peeps.coverage")
                        i.fa.fa-map-marker
                        | {{peeps.coverage | dashed}}
                      .text-muted 
                        | {{peeps.userId.email}}
                      .text-muted
                        | {{peeps.userId.account_type | acctype}}
                      ul.social-list
                        li
                          a.tooltips(href='#', data-toggle='tooltip', data-placement='top', title='', data-original-title='Facebook')
                            i.fa.fa-facebook
                        li
                          a.tooltips(href='#', data-toggle='tooltip', data-placement='top', title='', data-original-title='Twitter')
                            i.fa.fa-twitter


