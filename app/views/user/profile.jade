.contentpanel
  .row
      .col-sm-3
        img.thumbnail.img-responsive(src='/images/photos/#{userProfile.image}' , alt='')
        .mb30
        h5.subtitle About
        p.mb10.x-editable(data-type="textarea", data-name="summary")
          | #{userProfile.summary}
        a(href='#') Show More
        .mb10        
        h5.subtitle Connect
        ul.profile-social-list
          li
            i.fa.fa-twitter
            a.x-editable(href='#', data-type="text", data-name="twitter") twitter.com/eileensideways
          li
            i.fa.fa-facebook
            a.x-editable(href='#', data-type="text", data-name="facebook") facebook.com/eileen

        .mb20    
        .panel.panel-default
            .panel-body
              a(href="#")
                | 8 Distributors 
        .mb20    
        .panel.panel-default
            .panel-body
              a(href="#")
                | 10 Sales Agent

        .mb30
        h5.subtitle Office Address
        address.x-editable(data-type="textarea", data-name="address", data-defaultValue="Address")
          | #{userProfile.address}
        h5.subtitle Telephone
        p.x-editable(title='Phone', data-type="text", data-name="phone", data-default-value="Your Phone Number")
          | #{userProfile.phone}
      //
         col-sm-3 
      .col-sm-9
        .profile-header
          h2.profile-name.x-editable(data-name="name", data-type="text", data-default-value="Full Name or Company Name") #{userProfile.name}
          .profile-location
            span(style="display: block", title="Your Coverage / Territory") 
              i.fa.fa-map-marker
              | Coverage
            span.x-editable(data-type="text", data-name="coverage", data-default-value="Territory")
              | #{userProfile.coverage}
          .profile-position
            i.fa.fa-briefcase
            span.x-editable(data-name="position", data-type="text", title="Position", data-default-value="Position") #{userProfile.position} 
            span(style="margin: 0 2px;") at 
            a.x-editable(href='#', data-type="text", data-name="employer", title="Employer", data-default-value="Employer") #{userProfile.employer}
          .mb20
          button.btn.btn-success.mr5.start-edit
            i.fa.fa-user
            | Edit Profile
          button.btn.btn-white
            i.fa.fa-envelope-o
            | Message
        //
           profile-header 
        //
           Nav tabs 
        ul.nav.nav-tabs.nav-justified.nav-profile
          li.active
            a(href='#activities', data-toggle='tab')
              strong Activities
          li
            a(href='#drug-pages', data-toggle='tab')
              strong Drug Pages
          li
            a(href='#calendar', data-toggle='tab')
              strong Calendar
          li
            a(href='#prospects', data-toggle='tab')
              strong Prospects
          li
            a(href='#prospects', data-toggle='tab')
              strong Map
        //
           Tab panes 
        .tab-content
          include ../widgets/profile/activity
          +loadActivities()

          include ../widgets/profile/drug-pages
          +loadDrugPages()

          include ../widgets/profile/calendar
          +loadCalendar()

          include ../widgets/profile/prospects
          +loadProspects()
          
          include ../widgets/profile/prospects
          +loadProspects()

append scripts
script(src='/js/jquery.prettyPhoto.js')
script(src='/js/holder.js')
script.
  jQuery(document).ready(function(){
    jQuery("a[rel^='prettyPhoto']").prettyPhoto();
    //Replaces data-rel attribute to rel.
    //We use data-rel because of w3c validation issue
    jQuery('a[data-rel]').each(function() {
    jQuery(this).attr('rel', jQuery(this).data('rel'));
    });

    $.fn.editable.defaults.pk = '#{userData._id}'; 
    $.fn.editable.defaults.ajaxOptions =  {
      type: "PUT"
    };

    $.fn.editable.defaults.url = '/users/profile';

    $('.x-editable').editable('disable');
    $(document).on('click', '.start-edit', function (e) {
      $('.x-editable').editable('toggleDisabled');
    });
  });
